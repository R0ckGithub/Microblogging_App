<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload_post">


    <ImageView
        android:id="@+id/post_upload_image"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        app:srcCompat="@drawable/blank_profile"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:background="@drawable/round_corner_frag_bg"
        android:padding="@dimen/padding"
        />
    <ImageButton
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:id="@+id/post_upload_back_btn"
        android:src="@drawable/back_arrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/round_btn"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/post_upload_image"
        android:layout_margin="@dimen/padding"
        android:id="@+id/post_upload_description"
        android:layout_above="@+id/post_upload_btns"
        android:background="@drawable/round_corner_frag_bg"
        android:gravity="top"
        android:padding="@dimen/padding"
        android:hint="Write description here"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:padding="@dimen/padding"
        android:id="@+id/post_upload_btns"
        android:layout_alignParentBottom="true">
    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_upload_submit_btn"
        android:text="Submit"
        android:background="@drawable/round_btn"
        />
    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_upload_cancel_btn"
        android:text="Cancel"
        android:layout_weight="1"
        android:background="@drawable/round_btn"
        />
    ,
    </LinearLayout>

</RelativeLayout>